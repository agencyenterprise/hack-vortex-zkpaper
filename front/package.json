{
  "name": "noir-starter",
  "version": "1.0.0",
  "type": "module",
  "description": "A template repository to get started with writing zero knowledge programs with Noir.",
  "scripts": {
    "prep": "cd circuit && nargo codegen-verifier",
    "dev": "hardhat compile && yarn deploy && vite",
    "build_local": "hardhat compile && yarn deploy && vite build",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "hardhat compile && NODE_OPTIONS='--experimental-loader ts-node/esm/transpile-only' hardhat run --network ${NETWORK:-localhost} scripts/deploy.ts",
    "node": "hardhat node",
    "test": "NODE_OPTIONS='--experimental-loader ts-node/esm/transpile-only' hardhat test"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.1.3",
    "@noir-lang/backend_barretenberg": "^0.27.0",
    "@noir-lang/noir_js": "^0.27.0",
    "@noir-lang/noir_wasm": "^0.27.0",
    "@noir-lang/types": "^0.27.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "1.0.0",
    "@nomicfoundation/hardhat-viem": "1.0.0",
    "@openzeppelin/contracts": "4.9.3",
    "dotenv": "^16.0.3",
    "hardhat": "^2.19.2",
    "openzeppelin-solidity": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "react-toastify": "^9.1.1",
    "typechain": "^8.1.0",
    "viem": "1.16.6"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.5",
    "@types/react": "^18.0.26",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "chai": "^4.2.0",
    "ethers": "^6.12.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.4",
    "vite": "^5.0.6",
    "wagmi": "^1.4.8"
  }
}